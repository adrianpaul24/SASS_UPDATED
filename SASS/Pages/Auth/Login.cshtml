@page
@model SASS.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 420px;">
        <h3 class="text-center mb-4">
            <i class="fas fa-sign-in-alt me-2"></i>Login
        </h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-circle me-1"></i>@Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Username or Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" asp-for="LoginInput" placeholder="Enter username or email" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-sign-in-alt me-1"></i>Login
            </button>

            <div class="text-center mt-3">
                <small>
                    Don't have an account?
                    <a asp-page="/Auth/Register">Register here</a>
                </small>
            </div>
        </form>
    </div>
</div>

<style>
    body, html {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }
</style>
