@page
@model SASS.Pages.Auth.Verify2FAModel
@{
    ViewData["Title"] = "Verify 2FA";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .center-page {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-custom {
        width: 100%;
        max-width: 400px;
    }
</style>

<div class="center-page">
    <div class="card card-custom shadow border-0">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Two-Factor Authentication</h4>

            <form method="post">
                <div class="form-group">
                    <label asp-for="OTP" class="form-label">Enter the 6-digit code from your Authenticator app</label>
                    <input type="text" class="form-control" asp-for="OTP" required />
                    <span asp-validation-for="OTP" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block w-100 mt-3">Verify</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3 text-center">
                    @Model.ErrorMessage
                </div>
            }

            <div class="text-center mt-3">
                <a href="/Auth/Login" class="btn btn-link">← Back to Login</a>
            </div>
        </div>
    </div>
</div>
